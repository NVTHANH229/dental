<%= form_with(model: appointment) do |form| %>
<% if appointment.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% appointment.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :dentist_id, class: label_class %>
        <%= form.select :dentist_id, options_from_collection_for_select(
Dentist.all, 'id', 'name', selected = appointment.dentist_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :patient_id, class: label_class %>
        <%= form.select :patient_id, options_from_collection_for_select(
          Patient.all, 'id', 'name', selected = appointment.patient_id), class: label_class %>
      </div>
  <div class="mb-6">
        <%= form.label :date, class: label_class %>
          <%= form.datetime_field :date, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :fee, class: label_class %>
          <%= form.text_field :fee, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :note, class: label_class %>
          <%= form.text_field :note, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if appointment.persisted? %>
<%= link_to "Cancel", appointment, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", appointments_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
